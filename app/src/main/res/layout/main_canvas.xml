<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/mainCanvas"/>


    <com.leinardi.android.speeddial.SpeedDialView
        android:id="@+id/speedDial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:sdMainFabClosedSrc="@drawable/ic_baseline_expand_less_24"
        app:sdMainFabOpenedSrc="@drawable/ic_baseline_close_24"
        app:sdMainFabClosedBackgroundColor="#E6F37B2C"
        app:sdMainFabClosedIconColor="@android:color/black"
        app:sdMainFabOpenedBackgroundColor="#E6F37B2C"
        app:sdMainFabOpenedIconColor="@android:color/black"
        />
</RelativeLayout>